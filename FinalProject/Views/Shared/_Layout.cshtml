
<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity
@using FinalProject.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
      
        <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
   <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
     <script src="https://cdn.jsdelivr.net/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>

    <script src="~/js/layoutScript.js"></script>
<style>
a.nav-link {
    
}
a.activeMenuItem {
    background: #92B1B6;
    font-weight: bold;
    color: black;
}
 
</style>
    <link href="~/css/MyCustomStyleSheet.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
  


</head>

<body>

    <div class="container">
        <nav id="thenav" class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand" asp-controller="home" asp-action="index">
                <img src="~/images/Screenshot (245).png" width="30" height="30">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                   @if (SignInManager.IsSignedIn(User))
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="home" asp-action="AddDoctor">Add Doctor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="home" asp-action="AddPatient">Add Patient</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="home" asp-action="ScheduleAppointment">Schedule Appointment</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="home" asp-action="CancelAppointment">Cancel Appointment &emsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp</a>
                        </li>
                       <li>
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"> Log Out</a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
     

        <div>
            @RenderBody()
        </div>
    </div>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
